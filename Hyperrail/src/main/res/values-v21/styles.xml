<resources>

    <style name="Hyperrail" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionMenuTextColor">@color/colorTextLight</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/backgroundMaterialLight</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:textColorSecondary">@color/colorTextDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="HyperrailAccentSearchContainer" parent="HyperrailAccentSearchField">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="editTextStyle">@style/HyperrailAccentSearchText</item>
    </style>

    <style name="HyperrailAccentSearchField" parent="Hyperrail">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLight</item>

        <item name="android:colorAccent">@color/colorTextLight</item>
        <item name="colorAccent">@color/colorTextLight</item>

        <item name="android:colorControlNormal">@color/colorTextLight</item>
        <item name="android:colorControlActivated">@color/colorTextLight</item>
        <item name="android:colorControlHighlight">@color/colorTextLight</item>

        <item name="android:spinnerDropDownItemStyle">@style/HyperrailAccentSearchSpinnerDropdown
        </item>
        <item name="android:editTextStyle">@style/HyperrailAccentSearchText</item>
        <item name="android:autoCompleteTextViewStyle">@style/HyperrailAccentSearchAutocomplete
        </item>
    </style>

    <style name="HyperrailAccentSearchText" parent="android:Widget.Material.EditText">
        <item name="android:elevation">0dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:backgroundTint">@color/colorTextLight</item>
        <item name="android:progressTint">@color/colorTextLight</item>

    </style>

    <style name="HyperrailAccentSearchAutocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="colorControlActivated">@color/colorTextLight</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>

    <style name="HyperrailAccentSearchSpinnerDropdown" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="colorControlNormal">@color/colorTextDark</item>
        <item name="colorControlActivated">@color/colorTextDark</item>
        <item name="colorControlHighlight">@color/colorTextDark</item>

        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TrainLongClickDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:actionMenuTextColor">@color/colorTextDark</item>
        <item name="android:windowTitleStyle">@style/TrainLongClickDialogTitle</item>
    </style>

    <style name="TrainLongClickDialogTitle" parent="@style/Base.DialogWindowTitle.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
</resources>